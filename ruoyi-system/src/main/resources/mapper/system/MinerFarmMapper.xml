<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.MinerFarmMapper">

    <resultMap type="com.ruoyi.system.domain.MinerFarm" id="MinerFarmResult">
        <id     property="id"               column="id"                />
        <result property="name"             column="name"              />
        <result property="location"         column="location"          />
        <result property="energyType"       column="energy_type"       />
        <result property="priceWetSeason"   column="price_wet_season"  />
        <result property="priceDrySeason"   column="price_dry_season"  />
        <result property="priceAllYear"     column="price_all_year"    />
        <result property="status"           column="status"            />
        <result property="createTime"       column="create_time"       />
        <result property="updateTime"       column="update_time"       />
    </resultMap>

    <sql id="selectVo">
        select id, name, location, energy_type, price_wet_season, price_dry_season, price_all_year, status, create_time, update_time
        from miner_farm
    </sql>

    <select id="selectById" parameterType="java.lang.Long" resultMap="MinerFarmResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <select id="selectList" parameterType="com.ruoyi.system.domain.MinerFarm" resultMap="MinerFarmResult">
        <include refid="selectVo"/>
        <where>
            <if test="name != null and name != ''">and name like concat('%', #{name}, '%')</if>
            <if test="location != null and location != ''">and location like concat('%', #{location}, '%')</if>
            <if test="energyType != null and energyType != ''">and energy_type = #{energyType}</if>
            <if test="status != null">and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <insert id="insert" parameterType="com.ruoyi.system.domain.MinerFarm" useGeneratedKeys="true" keyProperty="id">
        insert into miner_farm(name, location, energy_type, price_wet_season, price_dry_season, price_all_year, status)
        values(#{name}, #{location}, #{energyType}, #{priceWetSeason}, #{priceDrySeason}, #{priceAllYear}, #{status})
    </insert>

    <update id="update" parameterType="com.ruoyi.system.domain.MinerFarm">
        update miner_farm
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="location != null">location = #{location},</if>
            <if test="energyType != null">energy_type = #{energyType},</if>
            <if test="priceWetSeason != null">price_wet_season = #{priceWetSeason},</if>
            <if test="priceDrySeason != null">price_dry_season = #{priceDrySeason},</if>
            <if test="priceAllYear != null">price_all_year = #{priceAllYear},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteByIds" parameterType="java.lang.Long">
        delete from miner_farm where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>

