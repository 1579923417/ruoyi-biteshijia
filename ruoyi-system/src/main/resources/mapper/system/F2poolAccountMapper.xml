<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.F2poolAccountMapper">

    <resultMap type="com.ruoyi.system.domain.F2poolAccount" id="F2poolAccountResult">
        <id     property="id"        column="id"         />
        <result property="username"  column="username"   />
        <result property="apiToken"  column="api_token"  />
        <result property="baseUrl"   column="base_url"   />
        <result property="status"    column="status"     />
    </resultMap>

    <sql id="selectVo">
        select id, username, api_token, base_url, status from f2pool_account
    </sql>

    <select id="selectById" parameterType="java.lang.Integer" resultMap="F2poolAccountResult">
        <include refid="selectVo"/>
        where id = #{id}
    </select>

    <select id="selectList" parameterType="com.ruoyi.system.domain.F2poolAccount" resultMap="F2poolAccountResult">
        <include refid="selectVo"/>
        <where>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectByUsername" parameterType="java.lang.String" resultMap="F2poolAccountResult">
        <include refid="selectVo"/>
        where username = #{username} limit 1
    </select>

    <insert id="insert" parameterType="com.ruoyi.system.domain.F2poolAccount" useGeneratedKeys="true" keyProperty="id">
        insert into f2pool_account(username, api_token, base_url, status)
        values(#{username}, #{apiToken}, #{baseUrl}, #{status})
    </insert>

    <update id="update" parameterType="com.ruoyi.system.domain.F2poolAccount">
        update f2pool_account
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="apiToken != null">api_token = #{apiToken},</if>
            <if test="baseUrl != null">base_url = #{baseUrl},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteByIds" parameterType="java.lang.Integer">
        delete from f2pool_account where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
